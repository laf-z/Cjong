{
    _setmode(_fileno(stdout), 0x00020000);
    //createboxjogo('q',4,0);
    //wchar_t nome[] = L"        JOGAR       ";//TEM QUE TER 20 LETRAS INCLUINDO ESPAÇO
    //createboxmenu(nome,1);
    createboxteclas('w',10,10);
    createboxteclas('s',10,13);
    createboxteclas('a',5,13);
    createboxteclas('d',15,13);
    createboxteclas('r',35,13);
    createboxteclas('f',55,13);
    createboxteclas('e',75,11);
    gotoxy(8,16);
    wprintf(L"movimento");
    gotoxy(33,16);
    wprintf(L"Randomiza");
    gotoxy(55,16);
    wprintf(L"Menu");
    gotoxy(73,16);
    wprintf(L"Seleciona");
